# Database credentials
POSTGRES_DB=iotdb
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password

# SSH and deployment
ANSIBLE_USER=your_username
SSH_KEY_NAME=your_ssh_key_name
TARGET_HOSTNAME=your_hostname

# Grafana credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Kubernetes settings
NAMESPACE=your_namespace
TIMESCALEDB_STORAGE_SIZE=10Gi
MOSQUITTO_STORAGE_SIZE=2Gi
GRAFANA_STORAGE_SIZE=2Gi

# AWS/EKS Configuration
AWS_REGION=your_aws_region
CLUSTER_NAME=your-cluster-name

# ArgoCD Configuration
ARGOCD_VERSION=v2.8.4
ARGOCD_NAMESPACE=argocd

# SSH Configuration for VM access
SSH_KEY_PATH=~/.ssh/your_ssh_key_name
SSH_USER=your_username

# Container Names (optional - defaults will be used if not set)
TIMESCALE_CONTAINER_NAME=timescaledb
MQTT_CONTAINER_NAME=mosquitto
GRAFANA_CONTAINER_NAME=grafana
IOT_SERVICE_CONTAINER_NAME=iot_service